<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_corners">
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="CalendarViewStyle">
        <item name="android:weekDayTextAppearance">@style/WeekDayTextAppearance</item>
    </style>

    <style name="WeekDayTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- ... -->
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/teal</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/teal</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>